{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TemplateFoundry",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				 {
					"name": "comment.single.line.templatefoundry",
					"begin": "_--",
					"end": "\n"
				},
				{
					"name": "comment.multi.line.templatefoundry",
					"begin": "_/[*]",
					"end": "_[*]/"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.character",
					"match": "(_{|_}|_<|_>)"
				},
				{
					"name": "constant.language",
					"match": "(?i)\\b(ON|TRUE|FALSE|OFF)\\b"
				},
				{
					"name": "constant.numeric",
					"match": "[0-9]"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.templatefoundry",
				"match": "(?i)\\b(_#Define|_#SET|_#ECHO|_#INCLUDE|_#EOF|_#EXIT|_#IF|_#THEN|_#ELSIF|_#ELSE|_#ENDIF|_#CURSOR|_#LOOP|_#ENDLOOP|_#BREAK|_#MOVE|_#PUT|_#PUTLINE|_#WORDWRAP|_#WW|_#DUMP|_#IFDEF|_#IFNDEF|_#UNDEF)\\b"
			}]
		},
		"strings": {
			"patterns": [
				 {
					"name": "string.quoted.double.templatefoundry",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.templatefoundry",
							"match": "\\."
						}
					]
				},
				{
					"name": "string.quoted.single.templatefoundry",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.templatefoundry",
							"match": "'.'"
						}
					]
				}
			]
		},
		"variables": {
			"patterns": [
				 {
					"name": "variable.templatefoundry",
					"begin": "_&",
					"end": "[.]"
				}
			]
		}
	},
	"scopeName": "source.template"
}

